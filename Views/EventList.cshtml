@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var events = Model?.Children
        .Where(e => e.Value<DateTime>("eventDateTime") >= DateTime.Now)
        .OrderBy(e => e.Value<DateTime>("eventDateTime"))
        .ToList() ?? new List<IPublishedContent>();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model?.Name - Upcoming Events</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header class="site-header">
        <div class="container">
            <nav class="main-nav">
                <h1 class="site-title">@Model?.Name</h1>
                <ul class="nav-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/umbraco/surface/members/login" class="btn-secondary">Member Login</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <section class="page-header">
                <h1 class="page-title">Upcoming Events</h1>
                <p class="page-subtitle">Discover and book exciting events happening near you</p>
            </section>

            @if (events.Any())
            {
                <div class="events-grid">
                    @foreach (var eventItem in events)
                    {
                        var eventDate = eventItem.Value<DateTime>("eventDateTime");
                        var remainingSpots = eventItem.Value<int>("capacity");
                        
                        <article class="event-card">
                            <div class="event-card-header">
                                <div class="event-date-badge">
                                    <span class="month">@eventDate.ToString("MMM")</span>
                                    <span class="day">@eventDate.ToString("dd")</span>
                                </div>
                                @if (remainingSpots <= 10 && remainingSpots > 0)
                                {
                                    <span class="badge badge-warning">Only @remainingSpots spots left!</span>
                                }
                                else if (remainingSpots == 0)
                                {
                                    <span class="badge badge-danger">Sold Out</span>
                                }
                            </div>
                            
                            <div class="event-card-body">
                                <h3 class="event-title">
                                    <a href="@eventItem.Url()">@eventItem.Name</a>
                                </h3>
                                
                                <div class="event-meta">
                                    <div class="meta-item">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        <span>@eventDate.ToString("dddd, MMMM dd, yyyy")</span>
                                    </div>
                                    <div class="meta-item">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                                            <polyline points="2 17 12 22 22 17"></polyline>
                                            <polyline points="2 12 12 17 22 12"></polyline>
                                        </svg>
                                        <span>@eventItem.Value<string>("location")</span>
                                    </div>
                                    <div class="meta-item">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        <span>@remainingSpots / @remainingSpots available</span>
                                    </div>
                                </div>

                                @{
                                    var summary = eventItem.Value<string>("summary");
                                }
                                @if (!string.IsNullOrWhiteSpace(summary))
                                {
                                    <div class="event-summary">
                                        @Html.Raw(summary.Substring(0, Math.Min(150, summary.Length)))...
                                    </div>
                                }

                                <a href="@eventItem.Url()" class="btn btn-primary">View Details & Book</a>
                            </div>
                        </article>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    <h2>No Upcoming Events</h2>
                    <p>Check back soon for exciting new events!</p>
                </div>
            }
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year @Model?.Root()?.Name. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>